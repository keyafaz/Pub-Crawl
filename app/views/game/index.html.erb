<div class="w3-margin w3-container game_ind">
	<h1 class="w3-center">Welcome</h1>
	<div class="w3-half w3-hover-light-grey  w3-padding">
		<h3 class="w3-hover-white w3-twoquarters  w3-padding w3-margin"><a href="/game/new">Create a game!</a></h3>
	</div>
	
	<div class="w3-third w3-margin-top w3-margin w3-padding">
	<h3>Already have a game code?</h3>
	<form  id="code" class="w3-form" action="/game/<%= params[:id] %>">
	<input name="authenticity_token" value="<%= form_authenticity_token %> " type="hidden">

		Enter code: <input id="code_input" class="w3-input" type="text" name="id"  >
		<input  class="w3-btn w3-text-grey w3-sand w3-hover-blue-grey w3-margin-top" type='submit' value='Go to game!'>
	</form>
	</div>
</div>

<script type="text/javascript">
		$("#code").submit(function(e){
		e.preventDefault()
		window.location = "/game/"+$("#code_input").val();
	})
</script>





